<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <form class="add-device-form pure-form">
        <input class="add-device-form__input pure"
               type="text"
               required="required"
               placeholder="Name"
               name="name"/>
        <input class="add-device-form__input"
               type="text"
               required="required"
               placeholder="IP"
               name="ip"/>
        <input class="add-device-form__input"
               type="number"
               required="required"
               placeholder="ID"
               size="3"
               name="idDev"/>
        <button class="add-device-form__button-add pure-button pure-button-primary"
                type="submit">Добавить
        </button>
    </form>
</fest:template>