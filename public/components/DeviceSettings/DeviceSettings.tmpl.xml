<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
<table class="setting-devices-table w3-table-all">
    <tr>
        <th>ID</th>
        <th>Нименование</th>
        <th>IP</th>
        <th>ID в сети</th>
        <th>Опрашивать</th>
        <th></th>
    </tr>

    <fest:for iterate="data" index="index" value="item">

        <tr data-id="{item.id}">
            <td class="setting-devices-table__id">
                <fest:value>item.id</fest:value></td>
            <td class="setting-devices-table__name">
                <fest:value>item.name</fest:value></td>
            <td class="setting-devices-table__ip">
                <fest:value>item.ip</fest:value></td>
            <td class="setting-devices-table__id-dev">
                <fest:value>item.idDev</fest:value></td>
            <td class="setting-devices-table__state">
                <fest:value>item.state</fest:value></td>
            <td class="setting-devices-table__buttons w3-center">
                <button class="setting-devices-table-buttons__connect w3-btn w3-green">Подключить</button>
                <button class="setting-devices-table-buttons__edit w3-btn w3-orange">Изменить</button>
                <button class="setting-devices-table-buttons__delete w3-btn w3-red">Удалить</button>
            </td>
        </tr>



    </fest:for>
</table>
</fest:template>